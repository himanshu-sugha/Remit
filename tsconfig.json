{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "types": [
      "node"
    ],
    "lib": [
      "ESNext"
    ],
    "sourceMap": true,
    "strict": false,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}